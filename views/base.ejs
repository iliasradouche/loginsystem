
<%- include('header')-%>


<div class="text-center center-div" id="login">

    <div class="container w-25 border py-5">
        <div class="title">
            <h2 class="font-weight-bold">Login now</h2>
            <span>Log in for the existing user</span>
            <% if(locals.logout){ %>
            <div class="alter alert-sucess text-center">
                <%= logout %>
            </div>
            <% } %>
        </div>
<form action="/route/login" method="POST" class="pt-3">
    <div class="form-group">
        <input type="email" class="form-control" placeholder="email" name="email">
        <small class="form-text text-muted text-left">Register email adress</small>
    </div>
    <div class="form-group">
        <input type="password" class="form-control" name="password" placeholder="password">
    </div>
    <button type="submit" class="btn btn-success rounded-pill">Submit</button>
</form>
    </div>
</div>


<%- include('footer')-%>
